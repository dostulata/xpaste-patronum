[Unit]
Description=Service for {{ app_name }}
After=network.target

[Service]
Environment="RAILS_ENV={{ rails_env }}"
Environment="RAILS_LOG_TO_STDOUT={{ rails_log_to_stdout }}"
Environment="DB_HOST={{ db_host }}"
Environment="DB_PORT={{ db_port }}"
Environment="DB_NAME={{ db_name }}"
Environment="DB_USER={{ db_user }}"
Environment="DB_PASSWORD={{ db_password }}"
Environment="SECRET_KEY_BASE={{ secret_key_base }}"
WorkingDirectory=/root/xpaste_practicum
ExecStart=/usr/local/rvm/bin/rvm all do bundle exec puma -b unix:///var/run/puma.sock -e $RAILS_ENV config.ru

[Install]
WantedBy=multi-user.target
